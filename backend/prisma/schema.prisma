generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FAN
  ARTIST
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  FAILED
}

enum NftGrantOriginType {
  TIER
  FULL_LIVE
  CAMPAIGN
}

enum NftGrantStatus {
  PENDING
  MINTED
  FAILED
}

enum NftMintStatus {
  MINTED
  FAILED
}

enum MeetGreetAccessStatus {
  VALID
  USED
  EXPIRED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  role         Role
  authProvider String   @default("email")
  onboardingCompleted Boolean @default(false)
  name         String?
  picture      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  streams      Stream[] @relation("ArtistStreams")
  attendances  Attendance[]
  bids         Bid[]
  orders       Order[]
  wallets      Wallet[]
  nftGrants    NftGrant[]
  meetGreetAccesses MeetGreetAccess[]
}

model Stream {
  id          String       @id @default(cuid())
  artistId    String
  artist      User         @relation("ArtistStreams", fields: [artistId], references: [id])
  title       String
  startedAt   DateTime
  endedAt     DateTime?
  attendances Attendance[]
  bids        Bid[]
}

model Attendance {
  id        String   @id @default(cuid())
  userId    String
  streamId  String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  stream    Stream   @relation(fields: [streamId], references: [id])

  @@unique([userId, streamId])
}

model TierProgress {
  id         String   @id @default(cuid())
  userId     String   @unique
  attendance Int      @default(0)
  spendUsd   Decimal  @db.Decimal(10, 2)
  tier       Int      @default(0)
  updatedAt  DateTime @updatedAt
}

model Product {
  id         String   @id @default(cuid())
  artistId   String
  name       String
  priceUsd   Decimal  @db.Decimal(10, 2)
  tokenPrice Int?
  inventory  Int
}

model Bid {
  id        String   @id @default(cuid())
  streamId  String
  userId    String
  amountUsd Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  stream    Stream   @relation(fields: [streamId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id         String      @id @default(cuid())
  userId     String
  productId  String
  amountUsd  Decimal     @db.Decimal(10, 2)
  feeUsd     Decimal     @db.Decimal(10, 2)
  status     OrderStatus
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
}

model Wallet {
  id            String   @id @default(cuid())
  userId        String
  chain         String
  address       String
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  nftCollectibles NftCollectible[]
}

model NftAsset {
  id            String   @id @default(cuid())
  code          String   @unique
  name          String
  rarity        String
  imageUrl      String
  metadataUri   String
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  nftCollectibles NftCollectible[]
  nftGrants     NftGrant[]
  meetGreetAccesses MeetGreetAccess[]
}

model NftGrant {
  id          String            @id @default(cuid())
  userId      String
  assetId     String
  originType  NftGrantOriginType
  originRef   String
  status      NftGrantStatus    @default(PENDING)
  createdAt   DateTime          @default(now())
  mintedAt    DateTime?
  errorReason String?
  user        User              @relation(fields: [userId], references: [id])
  asset       NftAsset          @relation(fields: [assetId], references: [id])

  @@index([userId, status])
  @@index([assetId])
}

model NftCollectible {
  id         String   @id @default(cuid())
  walletId   String
  assetId    String
  tokenId    String
  contract   String
  txHash     String?
  chainId    Int?
  mintStatus NftMintStatus @default(MINTED)
  metadataUri String
  mintedAt   DateTime @default(now())
  wallet     Wallet   @relation(fields: [walletId], references: [id])
  asset      NftAsset @relation(fields: [assetId], references: [id])

  @@unique([contract, tokenId])
}

model ConcertEvent {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  location  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  accesses  MeetGreetAccess[]
}

model MeetGreetAccess {
  id          String                @id @default(cuid())
  userId      String
  eventId     String
  passAssetId String
  status      MeetGreetAccessStatus @default(VALID)
  issuedAt    DateTime              @default(now())
  usedAt      DateTime?
  user        User                  @relation(fields: [userId], references: [id])
  event       ConcertEvent          @relation(fields: [eventId], references: [id])
  passAsset   NftAsset              @relation(fields: [passAssetId], references: [id])

  @@index([userId, status])
  @@unique([userId, eventId])
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  userId    String?
  code      String
  payload   Json?
  createdAt DateTime @default(now())
}

model JourneyTierConfig {
  id         String   @id @default(cuid())
  code       String   @unique
  title      String
  requiredXp Int
  perkLabel  String
  sortOrder  Int
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model XpActionConfig {
  id        String   @id @default(cuid())
  code      String   @unique
  label     String
  xpValue   Int
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BandReward {
  id             String   @id @default(cuid())
  title          String
  description    String
  triggerType    String
  xpBonus        Int      @default(0)
  active         Boolean  @default(true)
  createdByEmail String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model BandStoreItem {
  id        String   @id @default(cuid())
  name      String
  fiatPrice Decimal  @db.Decimal(10, 2)
  imageUrl  String
  limited   Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BandConcert {
  id        String   @id @default(cuid())
  title     String
  venue     String
  city      String
  startsAt  DateTime
  priceEur  Decimal  @db.Decimal(10, 2)
  ticketUrl String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  registrations BandConcertRegistration[]
}

model BandLive {
  id         String   @id @default(cuid())
  artist     String
  title      String
  startsAt   DateTime
  viewers    Int      @default(0)
  rewardHint String
  genre      String
  colorClass String   @default("stream-a")
  youtubeUrl String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  subscriptions BandLiveSubscription[]
}

model BandLiveSubscription {
  id         String   @id @default(cuid())
  liveId     String
  userEmail  String
  userName   String?
  source     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  live       BandLive @relation(fields: [liveId], references: [id], onDelete: Cascade)

  @@unique([liveId, userEmail])
  @@index([userEmail])
}

model BandSale {
  id             String   @id @default(cuid())
  userEmail      String
  customerEmail  String
  customerName   String?
  productId      String
  productName    String
  itemType       String
  amountEur      Decimal  @db.Decimal(10, 2)
  status         String
  stripeSessionId String? @unique
  paymentIntentId String? @unique
  paidAt         DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  registrations  BandConcertRegistration[]
}

model BandConcertRegistration {
  id         String   @id @default(cuid())
  concertId  String
  userEmail  String
  userName   String?
  status     String
  source     String
  saleId     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  concert    BandConcert @relation(fields: [concertId], references: [id], onDelete: Cascade)
  sale       BandSale?   @relation(fields: [saleId], references: [id], onDelete: SetNull)

  @@unique([concertId, userEmail])
  @@index([userEmail])
  @@index([status])
}
